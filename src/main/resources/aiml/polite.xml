<?xml version="1.0" encoding="UTF-8"?>
<aiml version="1.0">
    <!-- not what you think-->
    <category>
        <pattern>ITS NOT WHAT IT LOOKS LIKE</pattern>
        <template>
            <redirect>IT IS NOT WHAT YOU THINK</redirect>
        </template>
    </category>
    <category>
        <pattern>IT IS NOT WHAT IT LOOKS LIKE</pattern>
        <template>
            <redirect>IT IS NOT WHAT YOU THINK</redirect>
        </template>
    </category>
    <category>
        <pattern>ITS NOT WHAT YOU THINK</pattern>
        <template>
            <redirect>IT IS NOT WHAT YOU THINK</redirect>
        </template>
    </category>
    <category>
        <pattern>IT IS NOT WHAT YOU THINK</pattern>
        <template>
            <random>
                <li>Is it?</li>
                <li>Isn't it?</li>
                <li>It's not?</li>
                <li>What is it then?</li>
            </random>
        </template>
    </category>
    <!-- take care -->
    <category>
        <pattern>TAKE CARE</pattern>
        <template>
            <random>
                <li>Thanks!</li>
                <li>Thanks, you too!</li>
                <li>You too!</li>
            </random>
        </template>
    </category>
    <!-- you got x bucks -->
    <category>
        <pattern>YOU GOT [012345678]+ POUNDS</pattern>
        <template>
            <redirect>YOU GOT \1 BUCKS</redirect>
        </template>
    </category>
    <category>
        <pattern>YOU GOT [012345678]+ DOLLARS</pattern>
        <template>
            <redirect>YOU GOT \1 BUCKS</redirect>
        </template>
    </category>
    <category>
        <pattern>YOU GOT [012345678]+ BUCKS</pattern>
        <template>
            <random>
                <li>No sorry.</li>
                <li>No, I'm sorry.</li>
                <li>I don't.</li>
                <li>I typically don't carry any cash.</li>
            </random>
        </template>
    </category>
    <!-- thanks -->
    <category>
        <pattern>THANKS</pattern>
        <template>
            <redirect>THANK YOU</redirect>
        </template>
    </category>
    <category>
        <pattern>THANK YOU</pattern>
        <template>
            <random>
                <li>No problem.</li>
                <li>You're welcome.</li>
                <li>You are welcome.</li>
                <li>My pleasure.</li>
                <li>Glad I could help.</li>
            </random>
        </template>
    </category>
    <!-- introductions -->
    <category>
        <pattern>NICE TO MEET YOU</pattern>
        <template>
            <redirect>NICE MEETING YOU</redirect>
        </template>
    </category>
    <category>
        <pattern>NICE MEETING YOU</pattern>
        <template>
            <random>
                <li>Nice to meet you too.</li>
                <li>The pleasure is mine.</li>
                <li>Nice meeting you.</li>
                <li>Pleasure to make your acquaintance.</li>
            </random>
        </template>
    </category>
    <!-- HOW DO YOU DO -->
    <category>
        <pattern>HOW ARE YOU</pattern>
        <template>
            <redirect>HOW ARE YOU DOING</redirect>
        </template>
    </category>
    <category>
        <pattern>HOW ARE YOU DOING</pattern>
        <template>
            <random>
                <li>I'm doing fine thanks.</li>
                <li>Doing fine.</li>
                <li>I'm doing good thanks.</li>
                <li>Doing good thanks.</li>
                <li>Doing good.</li>
            </random>
        </template>
    </category>
    <!-- too much information -->
    <category>
        <pattern>THAT IS TOO MUCH INFORMATION</pattern>
        <template>
            <redirect>TOO MUCH INFORMATION</redirect>
        </template>
    </category>
    <category>
        <pattern>THATS TOO MUCH INFORMATION</pattern>
        <template>
            <redirect>TOO MUCH INFORMATION</redirect>
        </template>
    </category>
    <category>
        <pattern>TOO MUCH INFORMATION</pattern>
        <template>
            <random>
                <li>Sorry.</li>
                <li>Whoops.</li>
                <li>Oops.</li>
                <li>Sorry about that.</li>
                <li>Sorry 'bout that.</li>
            </random>
        </template>
    </category>
</aiml>